{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",                  
    "types": [
      "jasmine",
      "node"
    ],
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
